package com.bory.company.command;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.bory.company.dao.CompanyDAOImpl;
import com.bory.company.dto.Employee;

public class AddCommand extends AbstractCommand{

	private static final String ADD_VIEW_NAME = "/WEB-INF/view/empDetail.jsp";
	
	@Override
	public String execute(HttpServletRequest request, HttpServletResponse response) {
		
		System.out.println("----------AddCommand----------");
		System.out.println(Integer.parseInt(request.getParameter("comm")));
		System.out.println(Integer.parseInt(request.getParameter("deptNo")));
		System.out.println(Integer.parseInt(request.getParameter("empno")));
		System.out.println(request.getParameter("ename"));
		System.out.println(request.getParameter("hireDate"));
		System.out.println(request.getParameter("job"));
		System.out.println(Integer.parseInt(request.getParameter("mgr")));
		System.out.println(Integer.parseInt(request.getParameter("sal")));
		
		Employee employee = new Employee();
		employee.setComm(Integer.parseInt(request.getParameter("comm"))); 	
		employee.setDeptNo(Integer.parseInt(request.getParameter("deptNo")));
		employee.setEmpNo(Integer.parseInt(request.getParameter("empno")));
		employee.seteName(request.getParameter("ename"));
		employee.setHireDate(request.getParameter("hireDate"));
		employee.setJob(request.getParameter("job"));
		employee.setMgr(Integer.parseInt(request.getParameter("mgr")));
		employee.setSal(Integer.parseInt(request.getParameter("sal")));
		
		System.out.println("등록에서 넘어온 값 : "+employee.toString());
		CompanyDAOImpl companyDAOImpl = new CompanyDAOImpl(connection);
		companyDAOImpl.insert(employee);
		
		return ADD_VIEW_NAME;
	}
	
	

}
